{% set item_col = show_sidebar ? 'col-9 col-md-12' : 'col-12' %}
{% set sidebar_col = show_sidebar ? 'col-3 col-md-12' : 'col-12' %}

<div class="columns" role="main" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.MAIN_CONTENT_AND_SIDEBAR'|t }}">
    <main id="item" class="column {{ item_col }} extra-spacing" role="main" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.MAIN_CONTENT'|t }}">
        {% block item %}{% endblock %}
    </main>
    
    {% if show_sidebar %}
    <aside id="sidebar" class="column {{ sidebar_col }}" role="complementary" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.SIDEBAR'|t }}">
        {% block sidebar %}{% endblock %}
    </aside>
    {% endif %}
</div>
