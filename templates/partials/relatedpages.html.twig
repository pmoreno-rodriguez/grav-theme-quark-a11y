<ul class="related-pages menu" role="list" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.RELATED_PAGES'|t }}">
    {% for related_path, score in related_pages %}
        {% set related = grav['pages'].get(related_path) %}
        {% if related %}
            <li class="menu-item" role="listitem">
                {% if config.plugins.relatedpages.show_score %}
                    <div class="menu-badge" aria-hidden="true">
                        <span class="label label-primary">{{ score }}</span>
                    </div>
                {% endif %}
                <a href="{{ related.url }}" 
                   title="{{ related.title }}"
                   aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.RELATED_POST'|t }} {{ related.title }}{% if config.plugins.relatedpages.show_score %} ({{ 'THEME_QUARK_A11Y.ARIA_LABELS.RELEVANCE_SCORE'|t }}{{ score }}){% endif %}">
                    {{ related.title }}
                </a>
            </li>
        {% endif %}
    {% endfor %}
</ul>