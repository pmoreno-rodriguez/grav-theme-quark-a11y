<article class="card" role="article" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.BLOG_POST_CARD'|t }}">
    {% set image = page.media[page.header.hero_image] ?: page.media.images|first %}
    {% if image %}
    <div class="card-image">
        <a href="{{ page.url }}" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.BLOG_READ_FULL_POST'|t }}{{ page.title }}">
            {{ image.cropZoom(800,400).loading('lazy').decoding('async').html(page.title, page.title)|raw }}
        </a>
    </div>
    {% endif %}
    
    <div class="card-header">
        <div class="card-subtitle text-gray">
            {% include 'partials/blog/date.html.twig' %}
        </div>
        <div class="card-title">
            {% include 'partials/blog/title.html.twig' with {title_level: 'h3'} %}
        </div>
    </div>
    
    <div class="card-body" aria-label="{{ 'THEME_QUARK_A11Y.ARIA_LABELS.BLOG_POST_SUMMARY'|t }}">
        {% if page.summary != page.content %}
            {{ page.summary|raw }}
        {% else %}
            {{ page.content|raw }}
        {% endif %}
    </div>
    
    <div class="card-footer">
        {% include 'partials/blog/taxonomy.html.twig' with {'label_style': 'label-primary'} %}
    </div>
</article>
