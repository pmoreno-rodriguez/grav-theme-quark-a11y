{% set styling %}
.lightbox-gallery {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.lightbox-gallery .lightbox-gallery__columns {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10px;
}

.lightbox-gallery .lightbox-gallery__column {
  width: 50%;
  padding: 0 10px;
  margin-bottom: 20px;
}

.lightbox-gallery img {
  display: block;
  border-radius: 5px;
  transition: all .2s ease-in-out;
}

.lightbox-gallery img:hover {
  filter: brightness(60%);
  transform: scale(1.05);
}

@media only screen and (min-width: 600px) {
  .lightbox-gallery .lightbox-gallery__column {
    width: calc(100% / 3);
  }
}

@media only screen and (min-width: 1000px) {
  .lightbox-gallery .lightbox-gallery__column {
    width: 25%;
  }
}

.lightbox-gallery .visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
{% endset %}

{% do assets.addInlineCss(styling) %}

{% block module_content %}
  {% set data = page.header.gallery %}
  {% set thumb_width = data.thumb.width|default(600) %}
  {% set thumb_height = data.thumb.height|default(450) %}

  <section class="lightbox-gallery" aria-labelledby="gallery-heading">
    <h2 id="gallery-heading" class="visually-hidden">{{ page.title }} Gallery</h2>

    <div class="lightbox-gallery__columns" role="list" aria-label="Gallery images">
      {% set gallery = md5(page.url) %}
      {% for item in data.items %}
        <div class="lightbox-gallery__column" role="listitem">
          {% set item_image = page.media[item.image] %}
          {% set title = item.title|default('Image ' ~ loop.index) %}
          {% set alt_text = item.alt|default('Gallery image ' ~ loop.index ~ ' - ' ~ page.title) %}

          <figure>
            {{ include('partials/lightbox.html.twig', {
              title: title,
              alt_text: alt_text,
              desc: item.desc,
              item_image: item_image,
              thumb_width: thumb_width,
              thumb_height: thumb_height,
              gallery: gallery,
            }) }}

            {% if item.title %}
              <figcaption class="visually-hidden">{{ item.title }}</figcaption>
            {% endif %}
          </figure>
        </div>
      {% endfor %}
    </div>

    <div class="visually-hidden" aria-hidden="true">
      {% for item in data.items %}
        {% if item.desc %}
          <div id="desc-{{ md5(item.desc) }}">
            {{ item.desc|markdown(false) }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
{% endblock %}
